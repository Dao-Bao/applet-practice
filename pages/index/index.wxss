.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  position: relative;
  width: 100%;
  align-items: center;
}
.page__hd {
  width: 100%;
  height: 100%;
}
.swipers {
  height: 400rpx;
  /* height: 100%; */
  width: 100%;
}
.slide-image {
  width: 750rpx;
  height: 400rpx;
  display: block;
}
/* 公司产品 */
.product_nav {
  /* padding-left: 15rpx; */
  padding-right: 15rpx;
}
.weui-article__section {
  display: block;
}
.weui-article__h2 {
  float: left;
  font-size: 21px;
  color: #28abcc;
  height: 38px;
  line-height: 38px;
  border-left: 3px solid #28abcc;
  padding-left: 15px;
}
.product_block {
  margin-top: 20%;
}
.product{
  border: 1px solid #efefef;
  text-align: center;
  width: 100%;
  margin: 0 auto;
}
.weui-article__h3 {
  font-size: 18px;
  text-align: center;
  color: #28abcc;
}
.weui-article__img {
  text-align: center;
  width: 25%;
  height: 25%;
  margin-top: -18%;
}
.product_img {
  height: 30%;
}
.product_p,.case_p {
  width: 91%;
  padding: 10px;
}
.weui-article__p {
  font-size: 15px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}
/* 案例中心 */
.case_nav {
  /* padding-left: 15rpx; */
  padding-right: 15rpx;
}
.case_block {
  margin-top: 10%;
}
.case {
  width: 100%;
  border: 1px solid #efefef;
  text-align: center;
  /* margin-top: 10px; */
  margin:0 auto;
}
.case_img {
  width: 100%;
  height: 100%;
}
.case_imgs {
  width: 100%;
  height: 150px;
  margin-top: 0;
}
/* 关于我们 */
.about_nav {
  /* padding-left: 15rpx; */
  padding-right: 15rpx;
}
.about_block {
  margin-top: 10px;
}
.about_font {
  text-align: left;
  /* padding-left: 15rpx; */
}
/* .about_p {
  padding-top: 15px;
  padding-left:15px;
} */
.about_img {
  width: 100%;
  height: 100%;
}
.about_imgs {
  width: 100%;
  height: 110px;
  margin-top: 0;
}
/* 公司荣誉 */
.honor_nav {
  /* padding-left: 15rpx; */
  padding-right: 15rpx;
}
.honor_block {
  margin-top: 10px;
}
.add {
  width: 100%;
  background: #f6f6f6;
  border-left: 5px solid #28abcc;
  margin-bottom: 3px;
}
.add_pic {
  width: 6%;
  height: 20px;
  margin-left: 5%;
  padding-top: 5%;
}
.add_font {
  padding-left: 5px;
  display: inline-block;
}
.honor_img {
  width: 100%;
  height: 100%;
}
.honor_imgs {
  width: 100%;
  height: 150px;
  margin-top: 0;
}
.weui-article__h4 {
  font-size: 15px;
  text-align: center;
  color: #28abcc;
}